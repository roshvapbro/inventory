<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<constant name="struts.devMode" value="true" />
	<constant name="struts.custom.i18n.resources" value="guest" />
	<!--constant name="struts.action.excludePattern" value="/ajaxSaveSalesOrder"/-->
	<!-- Configuration for the default package. -->
	<package name="default" extends="struts-default" namespace="/">
	<result-types>
	        <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
	    </result-types> 

		<!-- setup the default-stack exception mapping interceptor so that any 
			exceptions not caught by this application will be logged and then handled 
			by the global exception mapping -->
		<interceptors>
			<interceptor-stack name="appDefault">
				<interceptor-ref name="defaultStack">
					<param name="exception.logEnabled">true</param>
					<param name="exception.logLevel">ERROR</param>
				</interceptor-ref>
			</interceptor-stack>
		</interceptors>

		<default-interceptor-ref name="appDefault" />


		<global-results>
			<result name="error">/error.jsp</result>
		</global-results>


		<global-exception-mappings>
			<exception-mapping exception="java.lang.Exception"
				result="error" />
		</global-exception-mappings>


		<action name="index" class="com.vapbro.action.ListProductAction">
			<result name="success" type="tiles">productlist</result>
		</action>
		<action name="catindex" class="com.vapbro.action.ListCategoryAction">
			<result name="success">/jsp/categories.jsp</result>
		</action>

		<action name="addProductInput" class="com.vapbro.action.ProductAction"
			method="input">
			<result name="input" type="tiles">addproduct</result>
		</action>
		<action name="addCategoryInput" class="com.vapbro.action.CategoryAction"
			method="input">
			<result name="input">/jsp/categoryForm.jsp</result>
		</action>
		<action name="addProductSave" class="com.vapbro.action.ProductAction"
			method="save">
			<result name="success" type="redirectAction">
				<param name="actionName">index</param>
			</result>
			<result name="input" type="tiles">saveproduct</result>
		</action>
		<action name="addCategorySave" class="com.vapbro.action.CategoryAction"
			method="save">
			<result name="success" type="redirectAction">
				<param name="actionName">catindex</param>
			</result>
			<result name="input">/jsp/productForm.jsp</result>
		</action>

		<action name="editProductInput" class="com.vapbro.action.ProductAction"
			method="input">
		<result name="input" type="tiles">editproduct</result>
			
		</action>

		<action name="deleteProduct" class="com.vapbro.action.ProductDeleteAction"
			method="delete">
			<result name="success" type="redirectAction">
				<param name="actionName">index</param>
			</result>
			<result name="input">/jsp/productForm.jsp</result>
		</action>	
		<action name="saveSalesOrderJSON" class="com.vapbro.action.SaveSalesOrderJSONDataAction">
		 <result name="success" type="redirectAction">
				<param name="actionName">index</param>
			</result>
		</action>
		<action name="addGroupMaster" class="com.vapbro.action.Finance.GroupMasterAction">
			<result name="success" type="tiles">addgroup</result>
		</action>
		
		<action name="saveGroupMaster" class="com.vapbro.action.Finance.GroupMasterAction" method="saveGroup">
		<result name="success" type="redirectAction">
				<param name="actionName">addGroupMaster</param>
			</result>
		</action>
		
		<action name="addLedger" class="com.vapbro.action.Finance.LedgerMasterAction">
			<result name="success" type="tiles">addLedgerForm</result>
		</action>
		<action name="TreeNode">
  		<result>/finance/treenode.jsp</result>
  		</action>
  		
  		<action name="ReceiptAction" class="com.vapbro.action.Finance.ListingAction">
		<result name="success" type="tiles">cashreceipt</result>
		</action>
		<action name="CashReceiptDetailAction" class="com.vapbro.action.Finance.ListingAction" method="getCurrentBalanceDB" >
		<result name="success" >/finance/cashdetail.jsp</result>
			
		</action>
		<action name="CashReceiptledgerAction" class="com.vapbro.action.Finance.ListingAction" method="getLedgerBalanceDB" >
		<result name="success">/finance/cashdetail.jsp</result>
		</action>
		<action name="savecashReceiptform" class="com.vapbro.action.Finance.CashReceiptAction" method="saveCashReceipt">
		<result name="success" type="redirectAction">
				<param name="actionName">ReceiptAction</param>
			</result>
		</action>
		
		<action name="saveLedgerMaster" class="com.vapbro.action.Finance.LedgerMasterAction" method="saveLedger">
		<result name="success" type="redirectAction">
				<param name="actionName">addLedger</param>
			</result>
		</action>
		
		
		</package>

	<package name="default2" namespace="/ajax" extends="json-default">
		<action name="getJSONResult" class="com.vapbro.action.JSONDataAction">
			<result type="json" />
		</action>
		<action name="getSalesOrderJSON" class="com.vapbro.action.SalesOrderJSONDataAction">
			<result type="json" />
		</action>
		<action name="ajaxsaveSalesOrderJSON" class="com.vapbro.action.SaveSalesOrderJSONDataAction" method="saveSalesOrder">
        	<result type="json"/>  
        </action>
		
	</package>


</struts>